@{Layout = "_Layout";}

@model Pierre.Models.Flavor;

<div class="card">
  <div class="card-header">
  <h3>New Flavor</h3>
  </div>
  <div class="card-body">
    <p class="card-text">
      <div class="col-auto">
      @using (Html.BeginForm()) {
        <div class="col-auto">
          Flavor
          @Html.TextBoxFor(m => m.Name, new {@class = "form-control", placeholder = "Flavor", required="required"})
        </div>
        <br>
        <input type="submit" value="Submit" class="btn btn-info"/>
        }
      </p>
    </div>
  </div>
</div>