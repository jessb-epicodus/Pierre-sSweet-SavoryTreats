@{Layout = "_Layout";}

@using Pierre.Models;

<div class="card">
  <div class="card-header">
    <h3>Treats</h3>
  </div>
  <div class="card-body">
    <p class="card-text">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">@Html.ActionLink("âž•", "Create")</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
            <th scope="col"data-sortable="true">Name</th>
            <th scope="col">Description</th>
            <th scope="col"data-sortable="true">Flavors</th>
          </tr>
        </thead>
        <tbody>
          @if (@Model.Count == 0 ) {
            <tr>
              <th scope="row"></th>
              <td colspan="6"><em>No treats have been added yet</em></td>
          </tr>
          } 
          @foreach(Treat treat in Model) {
            <tr>
              <th scope="row"></th>
              <td>
                @Html.ActionLink("âŒ¨", "Edit", new {id = treat.TreatId})
              </td>
              <td>
                @using(@Html.BeginForm("Delete", "Treats")) {
                  @Html.Hidden("id", treat.TreatId)
                  <button type="submit" class="btn btn-default">ðŸ—‘</button>
                }
              </td>
              <td>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new {id= treat.TreatId})</td>
              <td>@Html.DisplayFor(m => treat.Name)</td>
              <td>@Html.DisplayFor(m => treat.Description)</td>
              <td>
                @if(@ViewBag.Count == 0) {
                  <em>No machines have been added</em>
                } 
                @foreach(var join in treat.JoinEntities) { 
                  @join.Flavor.Name 
                }
              </td>
            </tr>
          }
        </tbody>
      </table>
    </p>
  </div>
</div>